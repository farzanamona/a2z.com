<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_background"
    android:orientation="vertical"
    tools:context=".SigninActivity">

    <ImageView
        android:id="@+id/signin_memberlogin_pic_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/signin_member_login_pic" />

    <TextView
        android:id="@+id/signin_memberlogin_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Member login"
        android:textAllCaps="true"
        android:textColor="@color/darkBlue"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/signin_username_et_id"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/signin_round_shape_edittext"
        android:drawableLeft="@drawable/signin_page_userid"
        android:hint="Email"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textColorHint="@color/White" />

    <EditText
        android:id="@+id/signin_password_et_id"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/signin_round_shape_edittext"
        android:drawableLeft="@drawable/signin_page_password"
        android:hint="Passord"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/White"
        android:textColorHint="@color/White" />

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <CheckBox
            android:id="@+id/signin_rembermer_cb_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember me"
            android:textColor="@color/darkBlue"
            android:textStyle="bold" />

        <Button
            android:id="@+id/signin_forgetpass_bt_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:background="@color/waterLayoutcolor_Launch"
            android:text="Forget Password ?"
            android:textAllCaps="false"
            android:textColor="@color/darkBlue"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/signin_login_bt_id"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/home_all_button_pic"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signin_notmember_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Not a member"
        android:textColor="@color/darkBlue"
        android:textSize="13sp"
        android:textStyle="bold" />

    <Button

        android:id="@+id/signin_createacc_bt_id"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/home_all_button_pic"
        android:text="Create account"
        android:textAllCaps="false"
        android:textColor="@color/darkBlue"
        android:textStyle="bold" />


</LinearLayout>